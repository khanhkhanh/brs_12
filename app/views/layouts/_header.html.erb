<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(:app_name), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li>
          <%= link_to t(:home), root_path %>
        </li>
        <% if user_signed_in? %>
          <% if current_user.admin? %>
            <li>
              <%= link_to t(:books), admin_books_path %>
            </li>
          <% else %>
            <li>
              <%= link_to t(:books), books_path %>
            </li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t :account %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(:edit), edit_path %></li>
              <li><%= link_to t(:logout), logout_path%></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(:login), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
