<div class="col-md-11">
  <span><%= link_to comment.user.email, user_path(comment.user) %></span>
  &#58;&nbsp;&nbsp;&nbsp;
  <span class="text-justify"><%= comment.content %></span>
</div>

<div class="col-md-1">
  <% unless current_user.nil? %>
    <% if current_user == comment.user || current_user.admin? %>
      <%= link_to review_comment_path(comment, review_id: comment.review.id), method: :delete do %>
        <span class="glyphicon glyphicon-remove pull-right"></span>
      <% end %>
    <% end %>

    <% if current_user == comment.user %>
      <%= link_to review_comment_path(comment, review_id: comment.review.id), method: :patch do %>
        <span class="glyphicon glyphicon-edit"></span>
      <% end %>
    <% end %>
  <% end %>
</div>
