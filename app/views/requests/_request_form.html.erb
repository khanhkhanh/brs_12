<%= form_for(@request) do |f| %>

  <%= f.label :book_name %>
  <%= f.text_field :book_name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :author %>
  <%= f.text_field :author %>

  <%= f.label :ISBN %>
  <%= f.text_field :ISBN %>

  <%= f.submit class: "btn-primary" %>
<% end %>
