<%= form_for [:admin, @review, @review.comments.build] do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t(:new_comment) %>
    <%= f.hidden_field :book_id %>
  </div>
  <%= f.submit t(:post), class: "btn btn-primary" %>
<% end %>
