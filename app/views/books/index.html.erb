<div class="container">

  <h1><%= t :all_books %></h1>

  <%= will_paginate %>
  <table id class="table table-bordered table-striped">
    <thead>
    <tr>
      <th><%= t :title %></th>
      <th><%= t :author %></th>
      <th><%= t :description %></th>
      <th><%= t :actions %></th>
    </tr>
    </thead>
    <tbody id="books">
      <%= render @books %>
    </tbody>
  </table>
</div>
