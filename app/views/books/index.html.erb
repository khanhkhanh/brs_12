<div class="container">

  <h1><%= t :all_books %></h1>

  <%= will_paginate %>
  <table class="table table-bordered table-striped table-hover">
    <thead>
      <tr>
        <th class="col-md-3 info header_cell"><%= t :title %></th>
        <th class="col-md-1 info header_cell"><%= t :author %></th>
        <th class="col-md-3 info header_cell"><%= t :description %></th>
        <th class="col-md-2 info header_cell"><%= t :cover %></th>
        <th class="col-md-3 info header_cell"><%= t :actions %></th>
      </tr>
    </thead>
    <tbody id="books">
      <%= render @books %>
    </tbody>
  </table>
</div>
