<h1><%= t :book_info %></h1>
<table id class="table table-bordered table-striped">
  <thead>
  <tr>
    <th><%= t :title %></th>
    <th><%= t :author %></th>
    <th><%= t :ISBN %></th>
    <th><%= t :cover %></th>
    <th><%= t :description %></th>
  </tr>
  </thead>
  <tbody id="books">
    <tr id="book_<%= @book.id %>">
      <td><%= @book.title %></td>
      <td><%= @book.author %></td>
      <td><%= @book.ISBN %></td>
      <td><%= image_tag @book.picture.url if @book.picture? %></td>
      <td><%= @book.description %></td>
    </tr>
  </tbody>
</table>

<h1><%= t :all_reviews %></h1>

<% if user_signed_in? %>
  <p>
    <section class="review_form">
      <%= render "shared/review_form" %>
    </section>
  </p>
<% end %>

<hr/>

<ol class="reviews">
  <%= render @reviews %>
</ol>
<%= will_paginate @reviews %>
