<%= form_for [:admin, @book], remote: true, html: {role: "form", multipart: true} do |f| %>
  
  <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>

  <div id="error_explanation" class="bg-danger text-danger">
  </div>
  
  <div class="row">
    <div class="col-sm-6">

      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :author %>
        <%= f.text_field :author, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :ISBN, t(:ISBN) %>
        <%= f.text_field :ISBN, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit @book.new_record? ? t(:create) : t(:update), class: "btn btn-primary" %>
      </div>

      <span class="picture">
        <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
      </span>
    </div>
  </div>
<% end %>
