<%= form_for [:admin, @book], html: {multipart: true, role: "form"}, remote: true do |f| %>
  <div id="error_explanation" class="bg-danger text-danger">
  </div>

  <div class="row">
    <div class="col-sm-6">

      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :author %>
        <%= f.text_field :author, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :ISBN %>
        <%= f.text_area :ISBN, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.file_field :picture, accept: "image/jpeg,image/gif,image/png" %>
      </div>

      <div class="form-group">
        <%= f.submit @book.new_record? ? t(:create) : t(:update), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
